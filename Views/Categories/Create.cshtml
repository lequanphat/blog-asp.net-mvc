@model CreateCategoryDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="col-md-6 mx-auto">
            <form class="card" method="post" asp-controller="Categories" asp-action="Create" >

                <div class="card-header">
                    <h3 class="card-title">Create category form</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label required">Category title</label>
                        <div>
                            <input asp-for="Name" type="text"
                                class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                placeholder="Enter category title">
                            <span asp-validation-for="Name" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
