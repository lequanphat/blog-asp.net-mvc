@{
    Layout = "_Layout";
}
<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Overview
                </div>
                <h2 class="page-title">
                    @ViewData["Title"]
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
            </div>
        </div>
    </div>
</div>
<!-- Page body -->
<div class="page-body">
    <div class="container-xl d-flex flex-column justify-content-center mb-7">
        <div class="empty">
            <div class="empty-img"><img src="~/images/home.svg" height="128" alt="">
            </div>
            <p class="empty-title">Welcome to Tabler Blog</p>
            <p class="empty-subtitle text-muted">
                Where you can share wonderful moments with everyone! Create new post now!
            </p>
            <div class="empty-action">
                <a href="#" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                        stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M12 5l0 14" />
                        <path d="M5 12l14 0" />
                    </svg>
                    Create new post
                </a>
            </div>
        </div>
    </div>
</div>